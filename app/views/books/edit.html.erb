<h2>Editing Book</h2>
<% if @book&.errors&.any? %>
  <div class="error-messages">
    <h2 class= "error-count"><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h2>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<%= form_with model: @book, url: book_path(@book.id), method: :patch do |b| %>
  <h5>Title</h5>
  <%= b.text_field :title %>

  <h5>Body</h5>
  <%= b.text_area :body %><br>
  <%= b.submit 'Update Book' %>
<table>    
    <tr>
    <th ><%= link_to 'Show', book_path(@book) %><th>
    <th>|</th>
    <th><a href="/books">Back</a></th></th>
  </tr>
</table>
  
  
<% end %>
